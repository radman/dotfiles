" set t_Co=256
syntax on

" Set tab character to 2 characters
set tabstop=2
set smarttab

" Indent width for auto indent
set shiftwidth=2
set autoindent

" Turn tabs into whitespace
set expandtab

" Line numbers
set number

" Show position
set ruler

" Turn on incremental search
set incsearch
set ignorecase
set smartcase

" Turn off wrapping
set nowrap
